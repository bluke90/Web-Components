{%
  set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
]
%}
{{ attach_library('*****/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}


  <div{{ content_attributes.addClass('node__content') }}>

    <person-card link="{{ file_url(node.field_picture.0.entity.field_media_image.entity.uri.value) }}" alt-text="{{ node.field_picture.0.entity.thumbnail.alt }}">
      <span slot="name">{{ node.field_name.value }}</span>
      <span slot="field-1">{{ node.field_hometown.value }}</span>
    </person-card>

  </div>

</article>
